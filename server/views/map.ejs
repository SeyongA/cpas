      /* 기본 스타일 */
      body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(to right, #e3f2fd, #bbdefb);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 90vh;
      }

      #logoImg {
        width: 120px;
      }

      #menu {
        width: 40px;
        height: 40px;
        cursor: pointer;
      }

      /* 미니맵 스타일 */
      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        max-width: 800px;
        padding: 20px;
        margin-top: 20px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      .legend {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
      }

      .sections {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-gap: 15px;
        width: 100%;
      }

      .section {
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
        border-radius: 8px;
        padding: 20px;
        font-size: 16px;
        font-weight: bold;
        color: #333;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
      }

      /* 코너별 색상 */
      .section-1,
      .section-4,
      .section-7 {
        background: #ffcc80;
      }

      .section-2,
      .section-5,
      .section-8 {
        background: #81d4fa;
      }

      .section-3,
      .section-6,
      .section-9 {
        background: #a5d6a7;
      }

      /* 호버 효과 */
      .section:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        cursor: pointer;
      }

      /* 사이드바 */
      #sidebar {
        position: fixed;
        top: 0;
        right: -250px;
        width: 250px;
        height: 100%;
        background: #42a5f5;
        color: white;
        padding: 20px;
        box-shadow: -4px 0 6px rgba(0, 0, 0, 0.1);
        transition: right 0.3s ease;
        z-index: 1000;
      }

      #sidebar.active {
        right: 0;
      }

      #sidebar h3 {
        margin-top: 0;
        font-size: 20px;
        margin-bottom: 15px;
      }

      #sidebar ul {
        list-style: none;
        padding: 0;
      }

      #sidebar li {
        margin: 15px 0;
        cursor: pointer;
        font-size: 18px;
        transition: color 0.2s;
      }

      #sidebar li:hover {
        color: #ffcc80;
      }

      /* 오버레이 */
      #overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
        z-index: 999;
      }

      #overlay.active {
        opacity: 1;
        visibility: visible;
      }
    </style>
